<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ui.view_winner_menu.WinnerViewFragment">

    <TextView
        android:id="@+id/text_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="#000000"
        android:text="@string/title"
        android:fontFamily="@font/ofont"
        android:textAlignment="center"
        android:paddingTop="15dp"/>

    <TextView
        android:id="@+id/text_winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#000000"
        android:text="Победа крестика!"
        android:fontFamily="@font/ofont"
        android:textAlignment="center"
        android:layout_marginTop="140dp"/>


    <ImageView
        android:id="@+id/image_winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/image_cross_is_winner" />

    <Button
        android:id="@+id/btn_return_mainmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="60dp"
        android:text="Main Menu" />

</LinearLayout>